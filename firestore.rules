rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is approved
    function isApproved(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.approvalStatus == 'approved';
    }

    // Feedback Messages: anyone can read, but only authenticated users can write, and data must be valid.
    match /messages/{messageId} {
      allow read: if true;
      // Allow write only if the incoming data has a 'name' and 'message' field.
      allow write: if request.resource.data.keys().hasAll(['name', 'message', 'createdAt']) &&
                       request.resource.data.name is string &&
                       request.resource.data.message is string;
    }

    // Anonymous Messages: anyone can read and write, as long as the data contains the required fields.
    match /anonymous_messages/{messageId} {
        allow read: if true;
        allow write: if request.resource.data.keys().hasAll(['anonymousId', 'message', 'createdAt']) &&
                         request.resource.data.anonymousId is string &&
                         request.resource.data.message is string;
    }

    // VIP Messages: Only approved users can read or write.
    match /vip_messages/{messageId} {
        allow read: if request.auth != null && isApproved(request.auth.uid);
        // User must be authenticated, approved, and the author of the message.
        allow write: if request.auth != null && 
                       isApproved(request.auth.uid) && 
                       request.resource.data.uid == request.auth.uid;
    }
    
    // User Profiles:
    match /users/{userId} {
      // Allow a user to read their own profile.
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow a user to create their own profile upon registration.
      allow create: if request.auth != null && 
                       request.auth.uid == userId &&
                       request.resource.data.uid == userId &&
                       request.resource.data.approvalStatus == 'pending'; // Must be 'pending' on create
      // Explicitly deny updates from the client to prevent users from approving themselves.
      // Admin must update the approvalStatus via the Firebase Console or a backend process.
      allow update: if false; 
      allow delete: if false;
    }
  }
}

    